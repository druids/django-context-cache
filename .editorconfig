# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org

root = true


[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4

[*.py]
indent_style = space
indent_size = 4
line_length=120
known_third_party=factory,ipware,responses,requests,nose,south,coverage,six,suds,geopy,user_agents,celery,vokativ,Levenshtein,dateutil,jsonfield,easymode,PIL,pillow,mock,xlrd,attrdict,jinja2,phonenumber_field
multi_line_output=5
lines_after_imports=2
known_django=django
known_chamber=chamber
known_pyston=pyston
known_is_core=is_core
known_germanium=germanium
known_reversion=reversion
known_security=security
sections=FUTURE,STDLIB,THIRDPARTY,DJANGO,IS_CORE,CHAMBER,ATS_SMS_OPERATOR,GERMANIUM,MAILER,PYSTON,REVERSION,SECURITY,SMS_VALIDATOR,SPITZEL_CLIENT,APP_SETTINGS,CLICK_DATA,COMMERCE,CORE,DASHBOARD,EMAIL_SENDER,EXT_LOG,GATE,GEO,HEUREKA,HISTORY_DATA,ISSUE_TRACKER,LEGAL,PREDATOR,REVOLVING,SCORING,SOLUS,TERMINATOR,TEST_CHECKOUT,USERS,WALLET,UTILS,FIRSTPARTY,LOCALFOLDER

[*.{sass,scss,cljs,clj}]
indent_style = space
indent_size = 2

[*.html]
indent_style = space
indent_size = 4

[*.json]
indent_style = space
indent_size = 2

[*.coffee]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[Makefile*]
indent_style = tab

[*.yml]
indent_style = space
indent_size = 2
